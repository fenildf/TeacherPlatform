<script type="text/javascript">
	//提交编辑
	function submitAdd(){
/*		var a = checkLiveForm();
		if(!a){
			return ;
		}*/
		var _chapterId 	= $('#chapterId').val();
		var _liveDate 	= $('#liveDate').val();
		var _startTime  = $('#liveTimeStartInput').val();
		var _endTime 	= $('#liveTimeEndInput').val();
		var _liveChannel = $('#liveChannel').val();
		var params = 'chapterId='+_chapterId+'&recordDate='+_liveDate+'&startTime='+_startTime+'&endTime='+_endTime+'&channel='+_liveChannel;
		var url = "http://teacher20130305.wss2.0.com/teacherCourses/ajaxAddCoursePlan/";
		$.ajax({
			url :url,
			type:'post',
			dataType:'json',
			data:params,
			success: function (data) {
				if(data.sign == 0){
					alert(data.msg);
				}else{
					alert(data.msg);
					goTab('/teacherCourses/chapterLists/', '讲列表', 'menu_1_1_3', true);
				}
			},
			error: function() {
				alert('数据读取错误..');
			}
		});	
	}
</script>
